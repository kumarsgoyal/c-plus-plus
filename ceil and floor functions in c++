/*
    In mathematics and computer science, the floor and ceiling functions map a real number
    to the greatest preceding or the least succeeding integer, respectively.
*/


#include <iostream> 
#include <cmath> 
using namespace std; 
  
  
int main() 
{ 
   
    // using floor function which return 
    // floor of input value 
   
    cout << "Floor is : " << floor(2.3) << endl; 
    cout << "Floor is : " << floor(-2.3) << endl; 
    
    
    // using Ceil function which return 
    //Ceil of input value
    
    cout << "Ceil is : " << ceil(2.3) << endl; 
    cout << "Ceil is : " << ceil(-2.3) << endl;
  
    return 0; 
} 
